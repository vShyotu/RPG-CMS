@{
    ViewBag.Title = "Home Page";
    string[] titles = { "Title 1", "Title 2", "Title 3" };
    string[] subtitles = { "Subtitle 1", "Subtitle 2", "Subtitle 3" };
    string cardText = "This is dummy text";
}

<h1>RPG-CMS</h1>
<p>A Tabletop RPG CMS system</p>

<div class="container">

    <div class="row m-auto align-items-center">

        @for (int i = 0; i < 3; i++)
        {
        <div class="col-sm">
            <div class="card m-2" style="width:16rem;">
                <div class="card-body">
                    <h5 class="card-title">@titles[i]</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@subtitles[i]</h6>
                    <p class="card-text">@cardText</p>
                    @Html.ActionLink("Go Somewhere", "", "", new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
        }

    </div>

</div>